@{
    ViewData["Title"] = "Conversor de Números por Extenso";
}

<h2">Conversor de Números por Extenso</h2>

<form method="post" asp-action="ConverterNumero">
    <label for="numero">Digite um número:</label>
    <input type="text" id="numero" name="numero" required />
    <button type="submit">Converter</button>
</form>

@if (ViewBag.NumeroExtenso != null)
{
    <h3>Resultado: @ViewBag.NumeroExtenso</h3>
}