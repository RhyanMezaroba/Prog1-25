@model Modelo.Product

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Cadastro de Produtos</h1>

    <div class="container">
        <form id="formProduct" method="post" asp-action="Create" asp-controller="Product">
            <div class="form-group">
                <label asp-for="ProductName"></label>
                <input type="text" class="form-control" asp-for="ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentPrice"></label>
                <input type="number" step="0.01" class="form-control" asp-for="CurrentPrice" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button id="btnProduct" type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
</div>
