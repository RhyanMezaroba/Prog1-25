@model Modelo.Product

@{
    ViewData["Title"] = "Create Page";
}

<div class="text-center">
    <h1>Cadastro de Produto</h1>

    <div class="container">

        <form id="formProduct" method="post" asp-action="Create" asp-controller="Product">

            <div class="row">

                <div class="form-group">
                    <label asp-for="@Model.Name">Nome:</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                </div>

            </div>

            <button id="btnProduct" type="submit" class="btn btn-primary" value="Cadastrar">
                Cadastrar
            </button>
        </form>
    </div>
</div>
