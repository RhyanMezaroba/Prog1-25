@model List<Modelo.Product>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Novo Produto</a>
    <a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-secondary ms-2">Exportar Dados</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th style="width: 50px;">Excluir</th>
                <th style="width: 50px;">Atualizar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>R$ @product.CurrentPrice.ToString("F2")</td>
                    <td>@product.Description</td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" title="Excluir Produto"
                           onclick="return confirm('Tem certeza que deseja excluir este produto?');">
                            <i class="fa-solid fa-trash text-danger"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" title="Atualizar Produto">
                            <i class="fa-solid fa-pen text-primary"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Não existem registros de produtos.
    </div>
}
