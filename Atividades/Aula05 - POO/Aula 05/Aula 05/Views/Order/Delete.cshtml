@model Modelo.Order

@{
    ViewData["Title"] = "Excluir Pedido";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="row mb-2">
        <div class="col-3 fw-bold">Id:</div>
        <div class="col-9">@Model.Id</div>
    </div>

    <div class="row mb-2">
        <div class="col-3 fw-bold">Cliente:</div>
        <div class="col-9">@Model.Customer?.Name ?? "Nome não disponível"</div>
    </div>

    <div class="row mb-2">
        <div class="col-3 fw-bold">Data do Pedido:</div>
        <div class="col-9">@Model.OrderDate.ToString("dd/MM/yyyy")</div>
    </div>

    <div class="row mb-2">
        <div class="col-3 fw-bold">Endereço de Entrega:</div>
        <div class="col-9">@Model.ShippingAddress?.Street1 ?? "Endereço não informado"</div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <form asp-action="ConfirmDelete" asp-controller="Order" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
        </div>
        <div class="col-md-6">
            <a asp-controller="Order" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>
